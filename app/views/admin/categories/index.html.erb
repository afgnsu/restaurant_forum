<div class="container-fluid">
  
  <h1>餐廳分類總表</h1>

  <div><%= link_to "Restaurant", admin_restaurants_path, class: "btn btn-default" %></div>

  <br>

  <div class="form-inline">
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <br>
  
  <div class="row">
    
    <div class="col-md-12">
      
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= link_to "Edit", admin_categories_path(id: category.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  
  </div>

</div>