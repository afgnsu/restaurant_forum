<div class="container">

  <div class="row">
    <div class="form-group">
      <div class="col-sm-4">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width: "100%", class: "img-responsive img-rounded" %>
        <% else %>
          <img class="img-responsive" src="https://api.fnkr.net/testimg/300x300/00CED1/FFF/?text=avatar">
        <% end %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-8">
        <h2><%= @user.name %></h2>
        <p><strong><%= @user.email %></strong></p>
        <p><%= simple_format @user.intro %></p>
        <% if @user.email == current_user.email %>
         <%= link_to "編輯資料", edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <br>

  <% unless current_user.admin? %>
    <div class="row">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><%= @commented_restaurants.size %> 間已評論餐廳</h3>
        </div>
        <div class="panel-body">
          <% @commented_restaurants.sort_by(&:name).uniq.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
              <div class="my-restaurant">
                <% if restaurant.image? %>
                  <%= restaurant.image %>
                <% else %>
                  <img class="img-responsive img-rounded" src="https://api.fnkr.net/testimg/150x150/00CED1/FFF/?text=bistro">
                <% end %>
                <%= restaurant.name %>
            <% end %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>

</div>