<h1>美食達人</h1>

<hr>

  <% @users.select { |user| user != current_user }.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="col-md-3">
        <div class="col-md-8 text-center">
          <% if user.avatar? %>
            <%= image_tag user.avatar %>
          <% else %>
            <img src="https://api.fnkr.net/testimg/150x150/b2dfce/FFF/?text=avatar" class="img-responsive img-rounded">
          <% end %>
          
          <h4> <%= user.name %> </h4>
          
          <p><%= render "shared/follow", user: user %></p>
        </div>
      </div>      
    <% end %>
  <% end %>
