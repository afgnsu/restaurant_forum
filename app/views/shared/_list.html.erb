<div class="restaurant clearfix">
  <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <% if restaurant.image? %>
            <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <% else %>
            <img src="https://api.fnkr.net/testimg/320x180/00CED1/FFF/?text=bistro", class="img-responsive center-block">
          <% end %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %></p> <br><br>
            <p><%= truncate(restaurant.description, length: 40)%></p>
        </div>
      </div>        
    </div>
  <% end %>
</div>

<div class="text-center">
  <%=  paginate @restaurants %>
</div>