<% if restaurant.is_liked?(current_user) %>
  <%= link_to fa_icon("thumbs-up 2x"), unlike_restaurant_path(restaurant), method: :post %>
<% else %>
  <%= link_to fa_icon("thumbs-o-up 2x"), like_restaurant_path(restaurant), method: :post %>
<% end %>
<span class="lead"> <%= restaurant.likes_count %> </span>